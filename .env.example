# ========================
# Server Configuration
# ========================
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001

# ========================
# Main Backend & Auth
# ========================
MAIN_BACKEND_URL=http://localhost:3000
SERVICE_AUTH_TOKEN=your_service_auth_token_here

# ========================
# Database
# ========================
MONGODB_URI=mongodb://localhost:27017/certificates
# For MongoDB Atlas use: mongodb+srv://username:password@cluster.mongodb.net/certificates

# ========================
# AWS S3 Configuration (Optional)
# ========================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=learning-platform-certificates

# ========================
# Redis Configuration
# ========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================
# Storage Type
# ========================
STORAGE_TYPE=local  # options: local or s3
LOCAL_STORAGE_PATH=./storage/certificates

# ========================
# JWT Configuration
# ========================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=15m

# ========================
# Platform Branding
# ========================
PLATFORM_NAME=Learning Platform
PLATFORM_LOGO_URL=http://localhost:3001/assets/logo.png
SIGNATURE_IMAGE_URL=

# ========================
# Rate Limiting
# ========================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================
# Batch Processing
# ========================
MAX_BATCH_SIZE=100
BATCH_TIMEOUT_MS=300000

# ========================
# Email Configuration (Optional)
# ========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password

# ========================
# Google Translate API (Optional)
# ========================
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key
